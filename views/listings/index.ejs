<% layout('/layouts/boilerplate') %>
<% let listing= allListings%>
<% if(listing){ %>
<h3>Your Work</h3>
<% } %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-11 mt-4" style="padding-top: 3rem;">
      <% for(let listing of allListings){ %>
        <a style="width: 20rem;" href="/listings/<%= listing._id %> 
          " class="listing-link">
          <div class="card col listing-card " style="width: 15rem; background-color: #d7d7d7  ;">
            <img class="card-img-top"
              src="<%= listing.image.url%>"
              alt="Listing_image" 
              style="height: 20rem;">
          <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%=listing.Name %> </b><br>
                <b><%= listing.contact%></b>
              </p>
            </div>
          </div>
        </a>
        <div style="width: 20rem;">
          <form action="/mark-attendance" method="POST">
            <label for="Name" class="form-lable"><b>Worker Name:</b></label>
            <input type="text" id="tName" name="Name" class="form-control" value="<%=listing.Name %>" required><br>
            <label for="status" class="form-lable"><b>Status:</b></label><br>
            <select id="status" name="status" class="form-select" aria-label="Default select example">
                <option value="Present">Present</option>
                <option value="Absent">Absent</option>
            </select><br><br>
            <button class="btn btn-dark" type="submit">Mark Attendance</button>
        </form><br>
        <form action="/:<%=listing._id%>">
          <button class="btn" type="submit" style="background-color: #1588fc;">Show Attendance</button>
        </form>
        </div>
          <% } %>
    </div>