
<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">
    <body>
        <!-- <h3 style="color: #fe424d;; padding-top: 2rem;">Create A new Listing</h3><br> -->
        <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-lable"><b>Company name</b></label><br>
                <input style="border-color:brown; border-style:groove;" type="text" name="listing[title]" placeholder="enter company name" class="form-control" required><br>
                <div class="valid-feedback">Title looks good</div>
            </div >
            <div class="mb-3">
                <label for="Name" class="form-lable"><b>Name</b></label><br>
                <input style="border-color:brown; border-style:groove;"  type="text" name="listing[Name]" placeholder="Name" class="form-control"  required><br>
                <div  class="invalid-feedback">Please Enter Valid  Name</div>
            </div>
            <div class="mb-3">
                <label for="Address" class="form-lable"><b>Address</b></label><br>
                <textarea style="border-color:brown; border-style:groove;" name="listing[Address]" placeholder="enter Address" class="form-control"  required></textarea><br>
                <div  class="invalid-feedback">Address should be valid</div>
            </div>
            <div class="row">
                <div class="mb-3">
                    <label for="image" class="form-lable"><b>upload Image</b></label><br>
                    <input style="border-color:brown; border-style:groove;" type="file" name="listing[image]" class="form-control" required><br>
                </div>
                <div class="mb-3">
                    <label for="contact" class="form-lable"><b>Contact Info</b></label><br>
                    <input style="border-color:brown; border-style:groove; " type="text" name="country_code" title="Error Message" pattern="[1-9]{1}[0-9]{9}" name="listing[contact]" placeholder="enter contact number" class="form-control"  required><br>
                    <div  class="invalid-feedback">Enter Valid number</div>
                </div >
                <div class=" mb-3">
                    <label for="location" class="form-lable"><b>Location</b></label><br>
                    <input style="border-color:brown; border-style:groove;" type="text" name="listing[location]" placeholder="enter location" class="form-control"  required><br>
                    <div  class="invalid-feedback">Please Enter  Valid Location</div>
                </div>
            </div>
            <button class="btn btn-dark edit-btn">ADD</button>
        </form>
    </body>
    </html>
</div>
</div>
