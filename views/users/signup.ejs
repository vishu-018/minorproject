<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on MeriSite</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
         <div class="mb-3">
            <label for="username" class="form-lable"><b>Username</b></label><br>
            <input 
            type="text"
             placeholder="enter username" 
             class="form-control"  
             id="username"
             name="username"
             required
             ><br>
            <div  class="valid-feedback">looks good</div>
         </div >
         <div class="mb-3">
            <label for="email" class="form-lable"><b>Email</b></label><br>
            <input
            type="email" 
            placeholder="enter email"
            class="form-control"  
            name="email"
            id="email" 
            required><br>
            <div  class="valid-feedback">Enter Valid Email</div>
         </div>
         <div class="mb-3">
            <label for="password" class="form-lable"><b>Password</b></label><br>
            <input type="password"
            placeholder="enter password"
            class="form-control" 
            id="password"
            name="password"
            required
       ><br>
          </div>
          <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>